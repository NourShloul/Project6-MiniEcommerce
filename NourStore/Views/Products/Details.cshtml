@model NourStore.Models.Product

@{
    ViewBag.Title = "Product Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .card-img-top {
        height: 300px;
        width: 500px;
    }
</style>
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <img src="~/images/@Model.ImageURL" class="img-fluid" alt="@Model.ProductName" />
        </div>
        <div class="col-md-6">
            <h1>@Model.ProductName</h1>
            <p class="lead">@Model.Price JD</p>
            <p>@Model.Description</p>
            <form action="@Url.Action("AddToCart", "Cart", new { id = Model.ProductID})" method="post">
                <button type="submit" class="btn btn-primary">Add to Cart</button>
            </form>
        </div>
    </div>
</div>


