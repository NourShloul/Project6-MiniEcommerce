<div class="container">
    <h1 class="my-4 text-center">Shop</h1>

    <!-- Filters -->
    <div class="row mb-4">
        <div class="col-md-3">
            <form method="get" action="@Url.Action("Shop", "Products")">
                <div class="form-group">
                    <label for="category">Category</label>
                    @Html.DropDownList("category", ViewBag.Categories as SelectList, "All Categories", new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="minPrice">Min Price</label>
                    <input type="number" name="minPrice" class="form-control" placeholder="0.00" step="0.01" />
                </div>
                <div class="form-group">
                    <label for="maxPrice">Max Price</label>
                    <input type="number" name="maxPrice" class="form-control" placeholder="1000.00" step="0.01" />
                </div>
                <button type="submit" class="btn btn-primary">Apply Filters</button>
            </form>
        </div>

        <div class="col-md-9">
            <div class="row">
                @foreach (var product in Model)
                {
                    <div class="col-md-4">
                        <div class="card mb-4 shadow-sm">
                            <img src="~/images/@product.ImageURL" class="card-img-top" alt="@product.ProductName">
                            <div class="card-body">
                                <h5 class="card-title">@product.ProductName</h5>
                                <p class="card-text">$@product.Price</p>
                                <a href="@Url.Action("Details", "Products", new { id = product.ProductID })" class="btn btn-primary">View Details</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


